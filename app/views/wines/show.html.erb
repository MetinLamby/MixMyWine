<div class="container">

  <div class="pages-headers">
    <h1><%= @wine.name %></h1>
  </div>

  <%= link_to :back do %>
  <i class="fas fa-chevron-left go-back"></i>
  <% end %>

  <div class="wine-show-flex">
    <div class="wine-show-img-div">
      <%= image_tag('y-wine.png', class:"wine-bottle") %>
    </div>
  </div>

  <div>
    <%= render "doses/form" %>
  </div>

  <div class="pages-headers">
    <h1>Your chosen wine tastes:</h1>
  </div>

    <div id="ingredients-index-wine-show" class="wine-show-flex">
      <div class="wine-show-ingredients-div">
        <div class="row">
          <% @wine.ingredients.each do  |i|%>
          <div id="wine-taste-index-each" class="col-md-6 col-lg-4">
            <p><%= i.name %></p>
          </div>
          <% end %>
        </div>
      </div>
    </div>
</div>






